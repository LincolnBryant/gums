<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>gums</groupId>
	<artifactId>gums-core</artifactId>
	<version>1.2.0</version>
	<name>gums-core</name>
	<description>GUMS Core provides the core functionality used by other GUMS components</description>

  	<repositories>
		<repository>
	    	<id>central</id>
			<name>Maven Repository Switchboard</name>
	 		<layout>default</layout>
 			<url>http://repo1.maven.org/maven2</url>
		</repository>
		<repository>
	    	<id>usatlas</id>
			<name>usatlas repository</name>
	 		<layout>default</layout>
 			<url>http://grid.racf.bnl.gov/mvn</url>
		</repository>
	</repositories>
	
	<distributionManagement>
		<repository>
	      <id>usatlas</id>
	      <name>usatlas repository</name>
	      <url>scp://grid.racf.bnl.gov:/var/www/html/mvn</url>
		</repository>
	</distributionManagement>	

   	<scm>
	    <connection>scm:svn:https://svn.usatlas.bnl.gov/svn/privilege/gums-client</connection>
	    <developerConnection>scm:svn:https://svn.usatlas.bnl.gov/svn/privilege/gums-client</developerConnection>
    	<url>https://svn.usatlas.bnl.gov/svn/privilege/gums-client</url>
	</scm>

  	<build>
  		<testResources>
	      <testResource>
	        <directory>src/test/config</directory>
	        <includes>
	          <include>**/*</include>
	        </includes>
	      </testResource>
	    </testResources>
  		<resources>
	      <resource>
	        <directory>src/main/java</directory>
	        <includes>
	          <include>**/*.xml</include>
	        </includes>
	      </resource>
	      <resource>
	        <directory>src/main/config</directory>
	      </resource>
	      <resource>
   	        <targetPath>sql</targetPath>
			<directory>src/main/sql</directory>
	      </resource>
	      <resource>
   	        <targetPath>scripts</targetPath>
			<directory>src/main/scripts</directory>
	      </resource>
	    </resources>
		<plugins>
   			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<includes>
						<include>**/*.*</include>
					</includes>
					<excludes>
						<exclude>**/.svn</exclude>
					</excludes>
				</configuration>
			</plugin>
  	 		<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>1</id>
						<phase>compile</phase>
						<configuration>
							<tasks>
				                <copy todir="src/test/config">
				                	<fileset includes="gums.config.schema" dir="src/main/config/"/>
				                	<fileset includes="gums.config.transform" dir="src/main/config/"/>
				                </copy>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin> 
  		</plugins>
	</build>
	
	<!-- To change the test profile run below, add something like this 
		to your maven settings.xml file (~/.m2/settings.xml linux default):
		
		<settings>
			...
			<profiles>
				<profile>
					<id>external-test</id>
					<activation>
						<activeByDefault>true</activeByDefault>
					</activation>
				</profile>
			</profiles>
		</settings>
	-->
	
	<profiles>
		<profile>
			<id>standard-test</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<!-- Only tests that do not require other services (best practice for JUnit) -->
			<build>
				<plugins>
				    <plugin>
				        <groupId>org.apache.maven.plugins</groupId>
				        <artifactId>maven-surefire-plugin</artifactId>
				        <configuration>
				            <excludes>
					            <exclude>**/Hibernate*</exclude>
					            <exclude>**/*VOMS*Test*</exclude>
				                <exclude>**/*DB*Test*</exclude>
				                <exclude>**/*LDAP*Test*</exclude>
				                <exclude>**/*Ldap*Test*</exclude>
				                <exclude>**/NIS*</exclude>
					            <exclude>**/unused/*</exclude>
					            <exclude>**/.svn</exclude>
				            </excludes>
				        </configuration>
				        <executions>
				            <execution>
				              <phase>test</phase>
				            </execution>
			            </executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>local-test</id>
			<!-- Standard tests and those that require Tomcat and MySQL to be installed 
				and configured along with db.properties and hibernate.properties present and correctly
				configured within the src/test/config directory -->
			<build>
				<plugins>
				    <plugin>
				        <groupId>org.apache.maven.plugins</groupId>
				        <artifactId>maven-surefire-plugin</artifactId>
				        <configuration>
				            <excludes>
					            <exclude>**/*VOMS*Test*</exclude>
				                <exclude>**/*LDAP*Test*</exclude>
					            <exclude>**/unused/*</exclude>
					            <exclude>**/.svn</exclude>
				            </excludes>
				        </configuration>
				        <executions>
				            <execution>
				              <phase>test</phase>
				            </execution>
			            </executions>
					</plugin>
				</plugins>
			</build>
		</profile>		
		<profile>
			<id>external-test</id>
			<!-- Standard and Local tests plus those that rely on an external voms and ldap server.  Requires 
				voms.properties and ldap.properties be present and correctly
				configured within the src/test/config directory.  The voms server should be named griddev and 
				contain group /griddev/subgriddev, role griddevRole, and users belonging to that group and role of
				/DC=org/DC=griddev/OU=People/CN=John Smith and /DC=org/DC=griddev/OU=People/CN=Jane Doe 12345.
				-->
			<build>
				<plugins>
				    <plugin>
				        <groupId>org.apache.maven.plugins</groupId>
				        <artifactId>maven-surefire-plugin</artifactId>
				        <configuration>
				            <excludes>
					            <exclude>**/unused/*</exclude>
					            <exclude>**/.svn</exclude>
				            </excludes>
				        </configuration>
				        <executions>
				            <execution>
				              <phase>test</phase>
				            </execution>
			            </executions>
					</plugin>
				</plugins>
			</build>
		</profile>	
	</profiles>

