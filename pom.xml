    <!-- drs for now, trimming down to 3 profiles - no-test, standard-test (no external
     infrastructure at all, and local-test which will use mock objects, derby, etc.
     to provide a test environemnt.
     -->

    <profiles>
        <profile>
            <id>no-test</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/**</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>standard-test</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <!-- Only tests that do not require other services (best practice for JUnit) -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/Hibernate*</exclude>
                                <exclude>**/*VOMS*Test*</exclude>
                                <exclude>**/*DB*Test*</exclude>
                                <exclude>**/*LDAP*Test*</exclude>
                                <exclude>**/*Ldap*Test*</exclude>
                                <exclude>**/*Nis*</exclude>
                                <exclude>**/unused/*</exclude>
                                <exclude>**/.svn</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>local-test</id>
            <!-- Standard tests and those that require Tomcat and MySQL to be installed
                                and configured along with db.properties and hibernate.properties present and correctly
                                configured within the src/test/config directory -->
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <!-- Standard and Local tests plus those that rely on an external voms and ldap server.  Requires
                                voms.properties and ldap.properties be present and correctly
                                configured within the src/test/config directory.  The voms server should be named griddev and
                                contain group /griddev/subgriddev, role griddevRole, and users belonging to that group and role of
                                /DC=org/DC=griddev/OU=People/CN=John Smith and /DC=org/DC=griddev/OU=People/CN=Jane Doe 12345.
                                -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/.svn</exclude>
                                <exclude>**/*Nis*</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
